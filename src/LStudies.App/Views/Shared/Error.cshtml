@model LStudies.App.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "An error occurred";
}

@{ 
    if (Model == null)
    {
        <div>
            <h2>Ops! An error occurred. Our team will be notified and correct it soon!</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}